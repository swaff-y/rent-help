
  <%= form_with url: login_path, local: true , class: "modal-content-static animate" do |f| %>

    <div class="imgcontainer">
      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
      <%= image_tag "logo.png", class: "avatar", alt: "logo"%>
    </div>

    <% if flash[:error] %>
    <br>
    <strong class="login-error">
      <%= flash[:error] %>
    </strong>
    <br>
    <br>
  <%  end %>

    <div class="container">
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "Email", required: "required" %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password", required: "required" %>

      <%= f.submit 'Login', class: "login-button" %>

    </div>

    <div class="container" style="background-color:#f1f1f1">
      <button type="button" onclick="window.location.href = '../'" class="cancelbtn">Cancel</button>
      <span class="psw">Forgot <a href="#">password?</a></span>
    </div>
  <% end %>
